---
interface Props {
  title: string;
  category: string;
  year: string;
  tags?: string[];
  image?: string;
  href?: string;
}

const { title, category, year, tags = [], image = "/api/placeholder/600/400", href = "#" } = Astro.props;
---

<article class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300">
  <a href={href} class="block">
    <div class="aspect-[4/3] overflow-hidden bg-gray-100">
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
        loading="lazy"
      />
    </div>
    <div class="p-6">
      <div class="flex items-center justify-between mb-3">
        <span class="text-sm font-medium text-blue-600">{category}</span>
        <span class="text-sm text-gray-500">{year}</span>
      </div>
      <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
        {title}
      </h3>
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="px-3 py-1 text-xs font-medium text-gray-600 bg-gray-100 rounded-full">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>