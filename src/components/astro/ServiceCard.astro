---
interface Props {
  title: string;
  description: string;
  icon?: string;
  href?: string;
}

const { title, description, icon, href = "#" } = Astro.props;
---

<div class="group p-8 bg-white rounded-xl border border-gray-200 hover:border-blue-500 hover:shadow-lg transition-all duration-300">
  {icon && (
    <div class="w-16 h-16 mb-6 p-3 bg-blue-50 rounded-lg group-hover:bg-blue-100 transition-colors">
      <div class="w-full h-full bg-blue-600 rounded" />
    </div>
  )}
  <h3 class="text-xl font-bold text-gray-900 mb-3">
    {title}
  </h3>
  <p class="text-gray-600 mb-4">
    {description}
  </p>
  <a
    href={href}
    class="inline-flex items-center text-blue-600 font-medium hover:gap-2 transition-all"
  >
    Learn more
    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M5 12h14M12 5l7 7-7 7" />
    </svg>
  </a>
</div>