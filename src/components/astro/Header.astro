---
import ThemeToggle from '@components/react/ThemeToggle';
import MobileMenu from '@components/react/MobileMenu';

const navLinks = [
  { href: '/about', label: 'About' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/services', label: 'Services' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 z-50 w-full">
  <!-- Header Background - themed glass effect -->
  <div class="header-glass border-b border-theme bg-red-500">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16 lg:h-20">

        <!-- Logo -->
        <a
          href="/"
          class="text-lg sm:text-xl font-semibold tracking-tight text-primary
                 hover:text-accent transition-colors"
        >
          Refine & Deploy
        </a>

        <!-- Desktop Navigation -->
        <nav class="hidden lg:flex items-center gap-1">
          {navLinks.map((link) => (
            <a
              href={link.href}
              class={`px-4 py-2 rounded-full text-sm font-medium transition-colors
                ${currentPath === link.href
                  ? 'text-primary bg-tertiary'
                  : 'text-secondary hover:text-primary hover:bg-tertiary'
                }`}
            >
              {link.label}
            </a>
          ))}

          <!-- Separator -->
          <div class="w-px h-6 mx-3 bg-theme" aria-hidden="true" />

          <!-- CTA Button -->
          <a
            href="/contact"
            class="btn-primary"
          >
            Get Started
          </a>

          <!-- Theme Toggle - Desktop -->
          <div class="ml-3">
            <ThemeToggle client:load />
          </div>
        </nav>

        <!-- Mobile: Theme Toggle + Hamburger -->
        <div class="flex items-center gap-2 lg:hidden">
          <ThemeToggle client:load variant="compact" />
          <MobileMenu client:load navLinks={navLinks} />
        </div>

      </div>
    </div>
  </div>
</header>
