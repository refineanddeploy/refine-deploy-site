---
import ThemeToggle from '@components/react/ThemeToggle';

const navLinks = [
  { href: '/about', label: 'About' },
  { href: '/portfolio', label: 'Portfolio' },
  { href: '/services', label: 'Services' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 z-50 w-full bg-white/80 dark:bg-gray-900/80 backdrop-blur-md">
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="text-xl font-bold text-gray-900 dark:text-white">
        Refine & Deploy
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center gap-10">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class={`text-gray-700 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white transition-colors ${
              currentPath === link.href ? 'text-gray-900 dark:text-white font-medium' : ''
            }`}
          >
            {link.label}
          </a>
        ))}
        <a
          href="/contact"
          class="px-6 py-2.5 bg-gray-900 dark:bg-white text-white dark:text-gray-900 rounded-full hover:bg-gray-800 dark:hover:bg-gray-100 transition-colors font-medium"
        >
          Contact Us
        </a>
        <ThemeToggle client:load />
      </nav>

      <!-- Mobile Menu Button -->
      <button class="md:hidden text-gray-900 dark:text-white p-2">
        <svg width="24" height="24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>