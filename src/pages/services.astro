---
import BaseLayout from '@layouts/BaseLayout.astro';

const services = [
  {
    title: "Web Design",
    description: "[WEB_DESIGN_DESCRIPTION]",
    icon: "design",
  },
  {
    title: "Web Development",
    description: "[WEB_DEV_DESCRIPTION]",
    icon: "dev",
  },
  {
    title: "E-commerce Solutions",
    description: "[ECOMMERCE_DESCRIPTION]",
    icon: "cart",
  },
  {
    title: "SEO Optimization",
    description: "[SEO_DESCRIPTION]",
    icon: "search",
  },
  {
    title: "Maintenance & Support",
    description: "[MAINTENANCE_DESCRIPTION]",
    icon: "support",
  },
  {
    title: "Performance Optimization",
    description: "[PERFORMANCE_DESCRIPTION]",
    icon: "speed",
  },
];

const processSteps = [
  { number: "1", title: "Discovery", description: "[PROCESS_STEP_1]" },
  { number: "2", title: "Design", description: "[PROCESS_STEP_2]" },
  { number: "3", title: "Development", description: "[PROCESS_STEP_3]" },
  { number: "4", title: "Launch", description: "[PROCESS_STEP_4]" },
];

// Icon mapping
const icons: Record<string, string> = {
  design: `<path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" />`,
  dev: `<path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />`,
  cart: `<path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />`,
  search: `<path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />`,
  support: `<path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17L17.25 21A2.652 2.652 0 0021 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 11-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 004.486-6.336l-3.276 3.277a3.004 3.004 0 01-2.25-2.25l3.276-3.276a4.5 4.5 0 00-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437l1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008z" />`,
  speed: `<path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />`,
};
---

<BaseLayout title="Services">
  <!-- Hero Section -->
  <section class="section-padding bg-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-primary mb-6">Our Services</h1>
        <p class="text-secondary text-lg sm:text-xl max-w-2xl mx-auto">
          [SERVICES_HERO_DESCRIPTION]
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="section-padding bg-primary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {services.map((service) => (
          <div class="card card-hover p-6 sm:p-8">
            <div class="w-12 h-12 sm:w-14 sm:h-14 mb-5 rounded-xl bg-accent/10 flex items-center justify-center">
              <svg class="w-6 h-6 sm:w-7 sm:h-7 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <Fragment set:html={icons[service.icon]} />
              </svg>
            </div>
            <h3 class="text-primary mb-3">{service.title}</h3>
            <p class="text-secondary text-sm sm:text-base">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="section-padding bg-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-primary text-center mb-4">Our Process</h2>
        <div class="w-16 h-1 bg-accent mx-auto mb-12 rounded-full"></div>

        <div class="space-y-6 sm:space-y-8">
          {processSteps.map((step) => (
            <div class="flex gap-4 sm:gap-6">
              <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-accent text-white rounded-full flex items-center justify-center font-bold text-sm sm:text-base">
                {step.number}
              </div>
              <div class="flex-1 pt-1">
                <h3 class="text-primary mb-2">{step.title}</h3>
                <p class="text-secondary">{step.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-accent text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-white mb-4 sm:mb-6">Ready to Get Started?</h2>
      <p class="text-lg sm:text-xl mb-8 sm:mb-10 max-w-2xl mx-auto opacity-90">
        [SERVICES_CTA_DESCRIPTION]
      </p>
      <a
        href="/contact"
        class="px-6 sm:px-8 py-3 sm:py-4 bg-white text-accent rounded-full
               hover:bg-opacity-90 transition-all font-medium press-effect inline-block"
      >
        Contact Us Today
      </a>
    </div>
  </section>
</BaseLayout>
