---
import BaseLayout from '@layouts/BaseLayout.astro';
import InteractivePhone from '@components/react/InteractivePhone';

// Interactive demo projects
const interactiveProjects = [
  {
    title: "Ehab Guitarrista",
    category: "Music & Arts",
    url: "https://ehabguitarrista.github.io/",
    description: "Professional musician portfolio"
  },
  {
    title: "Wikipedia",
    category: "Knowledge",
    url: "https://en.m.wikipedia.org/wiki/Web_design",
    description: "Mobile-optimized browsing"
  },
  {
    title: "CSS Zen Garden",
    category: "Design",
    url: "http://www.csszengarden.com",
    description: "The beauty of CSS design"
  }
];

const projects = [
  {
    title: "Adventure Co.",
    category: "Sports",
    year: "2025",
    tags: ["Mobile", "Custom", "E-commerce"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "One Creative",
    category: "Arts & Media",
    year: "2025",
    tags: ["Responsive", "Re-design", "CMS"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "Acme Beauty",
    category: "Beauty",
    year: "2025",
    tags: ["Desktop", "Custom", "Booking"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "Tech Solutions Inc.",
    category: "Technology",
    year: "2024",
    tags: ["SaaS", "Dashboard", "API"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "Local Restaurant",
    category: "Food & Beverage",
    year: "2024",
    tags: ["Mobile-first", "Ordering", "SEO"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "Fitness Studio",
    category: "Health & Wellness",
    year: "2024",
    tags: ["Booking", "Members", "Mobile"],
    image: "/api/placeholder/600/400"
  }
];

const categories = ["All", "Sports", "Arts & Media", "Beauty", "Technology", "Food & Beverage", "Health & Wellness"];
---

<BaseLayout title="Portfolio">
  <!-- Hero Section -->
  <section class="section-padding bg-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-primary mb-6">Our Portfolio</h1>
        <p class="text-secondary text-lg sm:text-xl max-w-2xl mx-auto">
          [PORTFOLIO_HERO_DESCRIPTION]
        </p>
      </div>
    </div>
  </section>

  <!-- Interactive Phone Showcase -->
  <section class="section-padding bg-primary overflow-hidden">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 lg:mb-16">
        <span class="text-accent text-sm font-medium uppercase tracking-wide">Interactive Demo</span>
        <h2 class="text-primary mt-2">Try It Yourself</h2>
        <p class="text-secondary mt-4 max-w-2xl mx-auto">
          Experience websites the way your customers will. Navigate, scroll, and interact with live projects right here.
        </p>
      </div>
      <InteractivePhone projects={interactiveProjects} client:visible />
    </div>
  </section>

  <!-- Filter Buttons -->
  <section class="py-6 sm:py-8 bg-secondary border-b border-theme">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-2 sm:gap-3 justify-center">
        {categories.map((category, index) => (
          <button class={`px-4 sm:px-6 py-2 rounded-full text-sm font-medium transition-colors press-effect ${
            index === 0
              ? "bg-accent text-white"
              : "bg-tertiary text-secondary hover:bg-secondary"
          }`}>
            {category}
          </button>
        ))}
      </div>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="section-padding bg-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        {projects.map((project) => (
          <article class="card card-hover overflow-hidden group">
            <div class="aspect-[4/3] bg-tertiary overflow-hidden">
              <img
                src={project.image}
                alt={project.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
            <div class="p-5 sm:p-6">
              <div class="flex items-center justify-between mb-3">
                <span class="text-xs sm:text-sm font-medium text-accent">
                  {project.category}
                </span>
                <span class="text-xs sm:text-sm text-tertiary">
                  {project.year}
                </span>
              </div>
              <h3 class="text-primary mb-3">{project.title}</h3>
              <div class="flex flex-wrap gap-2">
                {project.tags.map((tag) => (
                  <span class="px-2.5 py-1 text-xs font-medium rounded-full bg-tertiary text-secondary">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>

      <!-- Load More Button -->
      <div class="mt-12 sm:mt-16 text-center">
        <button class="btn-secondary press-effect">
          Load More Projects
        </button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-accent text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-white mb-4 sm:mb-6">Like What You See?</h2>
      <p class="text-lg sm:text-xl mb-8 sm:mb-10 max-w-2xl mx-auto opacity-90">
        [PORTFOLIO_CTA_DESCRIPTION]
      </p>
      <a
        href="/contact"
        class="px-6 sm:px-8 py-3 sm:py-4 bg-white text-accent rounded-full
               hover:bg-opacity-90 transition-all font-medium press-effect inline-block"
      >
        Start Your Project
      </a>
    </div>
  </section>
</BaseLayout>
