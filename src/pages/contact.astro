---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="Contact">
  <!-- Hero Section -->
  <section class="section-padding bg-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-primary mb-6">Get in Touch</h1>
        <p class="text-secondary text-lg sm:text-xl max-w-2xl mx-auto">
          [CONTACT_HERO_DESCRIPTION]
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="section-padding bg-primary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">

          <!-- Contact Form -->
          <div class="card p-6 sm:p-8">
            <h2 class="text-primary mb-6">Send us a message</h2>
            <form class="space-y-5">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
                <div>
                  <label for="name" class="block text-sm font-medium text-secondary mb-2">
                    Your Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 bg-secondary border border-theme rounded-xl
                           focus:ring-2 focus:ring-accent/50 focus:border-accent
                           outline-none transition text-primary placeholder:text-tertiary"
                    placeholder="John Doe"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-secondary mb-2">
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-secondary border border-theme rounded-xl
                           focus:ring-2 focus:ring-accent/50 focus:border-accent
                           outline-none transition text-primary placeholder:text-tertiary"
                    placeholder="john@example.com"
                  />
                </div>
              </div>

              <div>
                <label for="company" class="block text-sm font-medium text-secondary mb-2">
                  Company
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-3 bg-secondary border border-theme rounded-xl
                         focus:ring-2 focus:ring-accent/50 focus:border-accent
                         outline-none transition text-primary placeholder:text-tertiary"
                  placeholder="Your Company"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-secondary mb-2">
                  Phone Number
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-3 bg-secondary border border-theme rounded-xl
                         focus:ring-2 focus:ring-accent/50 focus:border-accent
                         outline-none transition text-primary placeholder:text-tertiary"
                  placeholder="+1 (555) 000-0000"
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-secondary mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  required
                  class="w-full px-4 py-3 bg-secondary border border-theme rounded-xl
                         focus:ring-2 focus:ring-accent/50 focus:border-accent
                         outline-none transition resize-none text-primary placeholder:text-tertiary"
                  placeholder="Tell us about your project..."
                ></textarea>
              </div>

              <button
                type="submit"
                class="w-full btn-primary py-4 text-base"
              >
                Send Message
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-6 sm:space-y-8">
            <div>
              <h3 class="text-primary mb-5">Other Ways to Reach Us</h3>
              <div class="space-y-4">
                <!-- Email -->
                <div class="flex items-start gap-4">
                  <div class="w-11 h-11 sm:w-12 sm:h-12 bg-accent/10 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-primary mb-1">Email</h4>
                    <p class="text-secondary">[CONTACT_EMAIL]</p>
                  </div>
                </div>

                <!-- Phone -->
                <div class="flex items-start gap-4">
                  <div class="w-11 h-11 sm:w-12 sm:h-12 bg-accent/10 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-primary mb-1">Phone</h4>
                    <p class="text-secondary">[CONTACT_PHONE]</p>
                  </div>
                </div>

                <!-- Location -->
                <div class="flex items-start gap-4">
                  <div class="w-11 h-11 sm:w-12 sm:h-12 bg-accent/10 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 sm:w-6 sm:h-6 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                    </svg>
                  </div>
                  <div>
                    <h4 class="font-semibold text-primary mb-1">Location</h4>
                    <p class="text-secondary">[CONTACT_LOCATION]</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Office Hours -->
            <div class="card p-5 sm:p-6 bg-accent/5 border-accent/10">
              <h4 class="font-semibold text-primary mb-3">Office Hours</h4>
              <div class="space-y-2 text-secondary text-sm sm:text-base">
                <p>Monday - Friday: [HOURS_WEEKDAY]</p>
                <p>Saturday: [HOURS_SATURDAY]</p>
                <p>Sunday: [HOURS_SUNDAY]</p>
              </div>
            </div>

            <!-- Response Time -->
            <div class="card p-5 sm:p-6">
              <h4 class="font-semibold text-primary mb-3">Response Time</h4>
              <p class="text-secondary text-sm sm:text-base">
                [RESPONSE_TIME_DESCRIPTION]
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
