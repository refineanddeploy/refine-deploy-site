---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="About">
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8">
          About Refine & Deploy
        </h1>
        <p class="text-lg text-gray-600 mb-8">
          [ABOUT_INTRO]
        </p>

        <div class="prose prose-lg max-w-none">
          <h2 class="text-2xl font-bold text-gray-900 mt-12 mb-6">Our Mission</h2>
          <p class="text-gray-600">
            [MISSION_STATEMENT]
          </p>

          <h2 class="text-2xl font-bold text-gray-900 mt-12 mb-6">Our Process</h2>
          <p class="text-gray-600">
            [PROCESS_DESCRIPTION]
          </p>

          <h2 class="text-2xl font-bold text-gray-900 mt-12 mb-6">Why Choose Us</h2>
          <ul class="space-y-4">
            <li class="text-gray-600">[BENEFIT_1]</li>
            <li class="text-gray-600">[BENEFIT_2]</li>
            <li class="text-gray-600">[BENEFIT_3]</li>
          </ul>
        </div>

        <div class="mt-16 p-8 bg-blue-50 rounded-xl">
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Ready to start your project?</h3>
          <p class="text-gray-600 mb-6">[CTA_TEXT]</p>
          <a href="/contact" class="inline-block px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
            Get in Touch
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>