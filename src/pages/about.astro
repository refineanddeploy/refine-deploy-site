---
import BaseLayout from '@layouts/BaseLayout.astro';
---

<BaseLayout title="About">
  <!-- Hero Section -->
  <section class="section-padding bg-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-primary mb-6">
          About <span class="text-accent">Refine & Deploy</span>
        </h1>
        <p class="text-secondary text-lg sm:text-xl max-w-2xl mx-auto">
          [ABOUT_INTRO]
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="section-padding bg-primary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">

        <!-- Mission -->
        <div class="mb-12 lg:mb-16">
          <h2 class="text-primary mb-4">Our Mission</h2>
          <div class="w-12 h-1 bg-accent mb-6 rounded-full"></div>
          <p class="text-secondary">
            [MISSION_STATEMENT]
          </p>
        </div>

        <!-- Process -->
        <div class="mb-12 lg:mb-16">
          <h2 class="text-primary mb-4">Our Process</h2>
          <div class="w-12 h-1 bg-accent mb-6 rounded-full"></div>
          <p class="text-secondary">
            [PROCESS_DESCRIPTION]
          </p>
        </div>

        <!-- Why Choose Us -->
        <div class="mb-12 lg:mb-16">
          <h2 class="text-primary mb-4">Why Choose Us</h2>
          <div class="w-12 h-1 bg-accent mb-6 rounded-full"></div>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-accent/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-secondary">[BENEFIT_1]</span>
            </li>
            <li class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-accent/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-secondary">[BENEFIT_2]</span>
            </li>
            <li class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-accent/10 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <span class="text-secondary">[BENEFIT_3]</span>
            </li>
          </ul>
        </div>

        <!-- CTA Card -->
        <div class="card p-6 sm:p-8 bg-accent/5 border-accent/20">
          <h3 class="text-primary mb-3">Ready to start your project?</h3>
          <p class="text-secondary mb-6">[CTA_TEXT]</p>
          <a href="/contact" class="btn-primary">
            Get in Touch
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
