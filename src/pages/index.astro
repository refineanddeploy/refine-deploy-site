---
import BaseLayout from '@layouts/BaseLayout.astro';
import ProjectCard from '@components/astro/ProjectCard.astro';
import ServiceCard from '@components/astro/ServiceCard.astro';

// Sample data - will be replaced with real content later
const recentProjects = [
  {
    title: "Adventure Co.",
    category: "Sports",
    year: "2025",
    tags: ["Mobile", "Custom"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "One Creative",
    category: "Arts & Media",
    year: "2025",
    tags: ["Responsive", "Re-design"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "Acme Beauty",
    category: "Beauty",
    year: "2025",
    tags: ["Desktop", "Custom"],
    image: "/api/placeholder/600/400"
  }
];

const services = [
  {
    title: "UX/UI Design",
    description: "[SERVICE_DESCRIPTION_1]",
    icon: "design"
  },
  {
    title: "Web & App Dev",
    description: "[SERVICE_DESCRIPTION_2]",
    icon: "dev"
  }
];
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section class="relative bg-gray-900 text-white py-24 md:py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          From scattered ideas to<br />
          seamless websites.
        </h1>
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
          [HERO_SUBHEADLINE]
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact"
            class="px-8 py-4 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
          >
            More About Us
          </a>
          <a
            href="/portfolio"
            class="px-8 py-4 bg-transparent text-white rounded-lg border-2 border-white hover:bg-white hover:text-gray-900 transition-all font-medium"
          >
            View Portfolio
          </a>
        </div>
      </div>

      <!-- Hero Image Placeholder -->
      <div class="mt-16 max-w-5xl mx-auto">
        <div class="bg-gray-800 rounded-xl p-8 text-center">
          <p class="text-gray-400">[HERO_IMAGE_PLACEHOLDER]</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Projects Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Recent Projects
        </h2>
        <p class="text-lg text-gray-600">
          [PROJECTS_DESCRIPTION]
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentProjects.map((project) => (
          <ProjectCard {...project} href="/portfolio" />
        ))}
      </div>

      <div class="mt-12 text-center">
        <a
          href="/portfolio"
          class="inline-block px-8 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-800 transition-colors font-medium"
        >
          View All Projects
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Our Services
        </h2>
        <p class="text-lg text-gray-600">
          [SERVICES_DESCRIPTION]
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl">
        {services.map((service) => (
          <ServiceCard {...service} href="/services" />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-blue-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        [CTA_HEADLINE]
      </h2>
      <p class="text-xl mb-10 max-w-2xl mx-auto text-blue-100">
        [CTA_DESCRIPTION]
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="px-8 py-4 bg-white text-blue-600 rounded-lg hover:bg-gray-100 transition-colors font-medium"
        >
          Get Started Today
        </a>
        <a
          href="/services"
          class="px-8 py-4 bg-transparent text-white rounded-lg border-2 border-white hover:bg-white hover:text-blue-600 transition-all font-medium"
        >
          Learn More
        </a>
      </div>
    </div>
  </section>
</BaseLayout>