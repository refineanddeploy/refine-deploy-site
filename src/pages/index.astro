---
import BaseLayout from '@layouts/BaseLayout.astro';
import HorizontalProjects from '@components/react/HorizontalProjects';
import InteractivePhone from '@components/react/InteractivePhone';
import AnimatedAboutButton from '@components/react/AnimatedAboutButton';

// Project data for horizontal scroll
const recentProjects = [
  {
    title: "Adventure Co.",
    category: "Sports",
    year: "2025",
    tags: ["Mobile", "Custom"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "One Creative",
    category: "Arts & Media",
    year: "2025",
    tags: ["Responsive", "Re-design"],
    image: "/api/placeholder/600/400"
  },
  {
    title: "Acme Beauty",
    category: "Beauty",
    year: "2025",
    tags: ["Desktop", "Custom"],
    image: "/api/placeholder/600/400"
  }
];

// Interactive phone showcase projects
const showcaseProjects = [
  {
    title: "Ehab Guitarrista",
    category: "Music & Arts",
    url: "https://ehabguitarrista.github.io/",
    description: "Professional musician portfolio"
  },
  {
    title: "Wikipedia",
    category: "Knowledge",
    url: "https://en.m.wikipedia.org/wiki/Web_design",
    description: "Mobile-optimized browsing"
  },
  {
    title: "CSS Zen Garden",
    category: "Design",
    url: "http://www.csszengarden.com",
    description: "The beauty of CSS design"
  }
];

const services = [
  {
    title: "UX/UI Design",
    description: "Intuitive, user-centered interfaces that solve problems, boost engagement, and drive your business goals.",
    icon: "design"
  },
  {
    title: "Web & App Dev",
    description: "Fast, secure, and scalable digital products powered by modern frameworks and high-quality code.",
    icon: "dev"
  }
];
---

<BaseLayout title="Home">
  <!-- Hero Section - Clean Apple-style -->
  <section class="relative min-h-[100svh] flex items-center overflow-x-clip overflow-y-visible">
    <!-- Subtle gradient background -->
    <div class="absolute inset-0 bg-secondary"></div>

    <!-- Animated gradient orbs - hidden on mobile for performance -->
    <div class="absolute inset-0 overflow-hidden hidden md:block">
      <div class="absolute top-20 left-10 w-96 h-96 rounded-full filter blur-3xl opacity-20 animate-blob"
           style="background: rgb(var(--color-accent));"></div>
      <div class="absolute top-40 right-10 w-96 h-96 rounded-full filter blur-3xl opacity-15 animate-blob animation-delay-2000"
           style="background: rgb(var(--color-accent));"></div>
      <div class="absolute -bottom-20 left-1/3 w-96 h-96 rounded-full filter blur-3xl opacity-10 animate-blob animation-delay-4000"
           style="background: rgb(var(--color-accent));"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <!-- Desktop only: Animated About Button - centered above content -->
      <div class="hidden lg:block relative h-32 mb-4">
        <AnimatedAboutButton client:load />
      </div>

      <!-- Mobile-first: Stack vertically, then grid on desktop -->
      <div class="flex flex-col lg:grid lg:grid-cols-2 gap-8 lg:gap-16 items-center">

        <!-- Text Content -->
        <div class="text-center lg:text-left order-2 lg:order-1 pt-8 lg:pt-0">
          <h1 class="text-primary mb-6 lg:mb-8">
            From scattered ideas to<br class="hidden sm:block" />
            <span class="text-accent">seamless</span> websites.
          </h1>

          <p class="text-secondary max-w-xl mx-auto lg:mx-0 mb-8 lg:mb-10">
            We create high-performing sites for all kinds of teamsâ€”new, small, or scaling.
            Whatever stage you're in, we build custom websites that work and grow with you.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <a href="/about" class="btn-primary">
              More About Us
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" strokeWidth="2">
                <path d="M5 12h14M12 5l7 7-7 7" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </a>
            <a href="/portfolio" class="btn-secondary">
              View Our Work
            </a>
          </div>
        </div>

        <!-- Hero Visual -->
        <div class="relative order-1 lg:order-2 w-full">
          <!-- Mobile only: Animated About Button -->
          <div class="lg:hidden">
            <AnimatedAboutButton client:load />
          </div>

          <!-- Mobile: Preview cards with mockups -->
          <div class="lg:hidden w-full max-w-md mx-auto pt-16 sm:pt-20">
            <div class="relative">
              <!-- Main card -->
              <div class="card shadow-elevated p-1 transform -rotate-2">
                <div class="aspect-[4/3] bg-tertiary rounded-xl overflow-hidden">
                  <div class="h-full bg-gradient-to-br from-accent/10 to-accent/5 p-4 flex flex-col justify-between">
                    <div class="flex gap-1">
                      <div class="w-2 h-2 rounded-full bg-red-400/60"></div>
                      <div class="w-2 h-2 rounded-full bg-yellow-400/60"></div>
                      <div class="w-2 h-2 rounded-full bg-green-400/60"></div>
                    </div>
                    <div class="text-center">
                      <p class="text-sm text-secondary font-medium">Beautiful websites<br/>that convert</p>
                    </div>
                    <div></div>
                  </div>
                </div>
              </div>
              <!-- Secondary floating card -->
              <div class="absolute -bottom-4 -left-4 w-24 card shadow-elevated p-1 transform rotate-6">
                <div class="aspect-[9/16] bg-gradient-to-br from-accent/20 to-accent/5 rounded-lg"></div>
              </div>
            </div>
          </div>

          <!-- Desktop: Tilted mockups -->
          <div class="hidden lg:block relative h-[420px] mt-8">
            <!-- Main desktop mockup -->
            <div class="absolute top-8 right-0 w-80 xl:w-96 card shadow-elevated transform rotate-3 hover:rotate-0 transition-transform duration-500 overflow-hidden">
              <div class="p-3 border-b border-subtle">
                <div class="flex gap-1.5">
                  <div class="w-2.5 h-2.5 rounded-full bg-red-400"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-yellow-400"></div>
                  <div class="w-2.5 h-2.5 rounded-full bg-green-400"></div>
                </div>
              </div>
              <div class="p-6">
                <div class="bg-tertiary h-36 rounded-xl flex items-center justify-center">
                  <span class="text-secondary text-sm text-center px-4">Kill the busywork.<br/>Keep the momentum.</span>
                </div>
              </div>
            </div>

            <!-- Tablet mockup -->
            <div class="absolute top-32 left-0 w-56 xl:w-64 card shadow-elevated transform -rotate-6 hover:rotate-0 transition-transform duration-500 overflow-hidden">
              <div class="p-3">
                <div class="h-36 rounded-xl bg-gradient-to-br from-accent/20 to-accent/5 p-4">
                  <div class="text-xs text-secondary">Acme Beauty</div>
                </div>
              </div>
            </div>

            <!-- Phone mockup -->
            <div class="absolute bottom-0 right-20 w-28 xl:w-32 card shadow-elevated transform rotate-12 hover:rotate-6 transition-transform duration-500 overflow-hidden rounded-2xl">
              <div class="p-2">
                <div class="h-44 rounded-xl bg-gradient-to-br from-accent/20 to-accent/5 p-3">
                  <div class="text-xs text-primary">Discover<br/>mindful hiking</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden md:block">
      <div class="w-6 h-10 rounded-full border-2 border-theme flex justify-center pt-2">
        <div class="w-1 h-2 bg-tertiary rounded-full animate-bounce"></div>
      </div>
    </div>
  </section>

  <!-- Interactive Phone Showcase Section -->
  <section class="section-padding bg-primary overflow-hidden">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <InteractivePhone projects={showcaseProjects} client:visible />
    </div>
  </section>

  <!-- Recent Projects Section -->
  <section class="section-padding bg-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 mb-8 lg:mb-12">
      <h2 class="text-primary">Recent Projects</h2>
      <div class="w-16 sm:w-20 h-1 bg-accent mt-4 rounded-full"></div>
    </div>

    <HorizontalProjects projects={recentProjects} client:visible />
  </section>

  <!-- Services Section -->
  <section class="section-padding bg-primary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-primary mb-4">Our Services</h2>
      <div class="w-16 sm:w-20 h-1 bg-accent mb-10 lg:mb-16 rounded-full"></div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8 max-w-5xl">
        {services.map((service) => (
          <div class="card card-hover p-6 sm:p-8">
            <!-- Icon -->
            <div class="w-14 h-14 sm:w-16 sm:h-16 mb-5 sm:mb-6 rounded-2xl bg-accent/10 flex items-center justify-center">
              {service.icon === 'design' ? (
                <svg class="w-7 h-7 sm:w-8 sm:h-8 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" />
                </svg>
              ) : (
                <svg class="w-7 h-7 sm:w-8 sm:h-8 text-accent" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
                </svg>
              )}
            </div>

            <h3 class="text-primary mb-3 sm:mb-4">{service.title}</h3>
            <p class="text-secondary">{service.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section-padding bg-accent text-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-white mb-4 sm:mb-6">Ready to bring your ideas to life?</h2>
      <p class="text-lg sm:text-xl mb-8 sm:mb-10 max-w-2xl mx-auto opacity-90">
        Let's build something amazing together. Start your project today.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contact"
          class="px-6 sm:px-8 py-3 sm:py-4 bg-white text-accent rounded-full
                 hover:bg-opacity-90 transition-all font-medium press-effect"
        >
          Get Started Today
        </a>
        <a
          href="/portfolio"
          class="px-6 sm:px-8 py-3 sm:py-4 bg-transparent text-white rounded-full
                 border-2 border-white/50 hover:bg-white/10 transition-all font-medium"
        >
          View Our Work
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite ease-in-out;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }
</style>
