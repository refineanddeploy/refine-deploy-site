---
import '@styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Professional web design and development for Canadian small businesses. Lightning-fast websites that convert visitors into customers."
} = Astro.props;

const siteTitle = `${title} | Refine & Deploy`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{siteTitle}</title>
  </head>
  <body>
    <slot />
  </body>
</html>