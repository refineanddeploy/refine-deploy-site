---
import '@styles/global.css';
import Header from '@components/astro/Header.astro';
import Footer from '@components/astro/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Professional web design and development for Canadian small businesses. Lightning-fast websites that convert visitors into customers."
} = Astro.props;

const siteTitle = `${title} | Refine & Deploy`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{siteTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>